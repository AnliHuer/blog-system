<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>悦享</title>
    <link href="./stylesheets/user-base.css" rel="stylesheet">
    <link href="./stylesheets/user-index.css" rel="stylesheet">
    <link href="./stylesheets/user-blog-detail.css" rel="stylesheet">
    <link href="./stylesheets/user-media.css" rel="stylesheet">
    <link href="./bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <script src="./jquery/dist/jquery.js"></script>
    <script src="./javascripts/user-blog-detail.js"></script>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0">
</head>
<body>
<div class="ibody">
    <header>
        <h1>悦 享</h1>
        <h2>记录生活 发现同好</h2>
        <div class="logo"><a href="user-index"></a></div>
        <nav id="topnav"><a href="user-index">首页</a><a href="user-blog">我的文章</a><a href="user-about">关于我</a><a
                href="user-word">留言板</a></nav>
    </header>

    <article>
        <div id="blog-shadow"></div>
        <div id="blog" data-id={{blogDetail.id}}>
            <div id="blog-title">{{blogDetail.blogName}}</div>
            <div id="blog-info"><span>作者：{{user.userName}}
                </span>|<span>日期：{{blogDetail.createdAt}}</span>|<span>分类：{{blogTag.tag}}</span></div>
            <div id="blog-line" class="line-one"></div>
            <div id="blog-content">{{blogDetail.contentHtml}}</div>
            <div id="blog-line"></div>
            <div id="blog-word">
                <div class="word-area">评论：({{blogMessages.length}}个评论)</div>
                <div class="word-line"></div>
                <div class="word-input">
                    <textarea id="input-word" class="form-control" rows="4" cols="5" placeholder="请输入..."></textarea>
                    <button class="btn btn-primary btn-default" type="submit" id='word-button'>留 言</button>
                </div>
                <div class="word-line"></div>
                <ul id="user-message">
                    {{#each blogMessages}}
                        <li class="message">{{blogMessage.dataValues.message}}</li>
                        <span class="message-userName">{{person.userName}}</span>
                        <span class="message-createdAt">{{blogMessage.dataValues.createdAt}}</span>
                        <div class="message-line"></div>
                    {{/each}}
                </ul>
            </div>
    </article>

    <aside>
        <div class="avatar"><a href="user-about"><span>{{person.userName}}</span></a></div>
        <div class="topspaceinfo">
            <h1>{{person.userName}}</h1>
            <p>{{person.userLog}}</p>
        </div>
        <div class="about_c">
            <p>用户名：{{person.userName}}</p>
            <p>ְ职&nbsp&nbsp&nbsp&nbsp业：{{person.userCareer}}</p>
            <p>电&nbsp&nbsp&nbsp&nbsp话：{{person.userPhone}}</p>
            <p>邮&nbsp&nbsp&nbsp&nbsp箱：{{person.userEmail}}</p>
        </div>
        <div class="copyright">
            <ul>
                <p> Design by <a href="/">Anlihuer</a></p>
                <p>2016</p>
                </p>
            </ul>
        </div>
    </aside>

    <div class="clear"></div>
</div>
</body>
</html>
